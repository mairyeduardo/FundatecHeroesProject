<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fundoHeroBlack">


    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/mileshero"
        />

    <EditText
        android:id="@+id/onboardingNome"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_marginTop="40dp"
        android:hint="Nome do usuario:"
        android:textColor="@color/fundoHeroBranco"
        android:textColorHint="@color/fundoHeroBranco"
        app:layout_constraintEnd_toEndOf="@+id/splash"
        app:layout_constraintStart_toStartOf="@+id/splash"
        app:layout_constraintTop_toBottomOf="@+id/splash"
        />

    <EditText
        android:id="@+id/onboardingEmail"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:hint="E-mail:"
        android:textColorHint="@color/fundoHeroBranco"
        app:layout_constraintEnd_toEndOf="@+id/onboardingNome"
        app:layout_constraintStart_toStartOf="@+id/onboardingNome"
        app:layout_constraintTop_toBottomOf="@+id/onboardingNome"
        />

    <EditText
        android:id="@+id/onboardingSenha"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:hint="Senha:"
        android:textColorHint="@color/fundoHeroBranco"
        app:layout_constraintEnd_toEndOf="@+id/onboardingEmail"
        app:layout_constraintStart_toStartOf="@+id/onboardingEmail"
        app:layout_constraintTop_toBottomOf="@+id/onboardingEmail"
        />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/app_onboarding"
        android:backgroundTint="@color/fundoHeroVermelho"
        android:layout_marginTop="50dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/onboardingSenha"
        app:layout_constraintEnd_toEndOf="@id/onboardingSenha"
        app:layout_constraintTop_toBottomOf="@+id/onboardingSenha"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

