<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FundatecHeroes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/fundoHeroBranco</item>
        <item name="colorPrimaryVariant">@color/fundoHeroBlack2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/fundoHeroVermelho</item>
    </style>

    <style name="TextView">
        <item name="android:text">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Bold" parent="TextView">
        <item name="android:textStyle">bold</item>
    </style>

</resources>